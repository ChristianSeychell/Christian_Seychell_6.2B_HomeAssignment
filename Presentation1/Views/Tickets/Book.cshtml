@model Presentation.Models.ViewModel.BookViewModel

@{
    ViewData["Title"] = "Book";
}

<h1>Book</h1>
<link rel="stylesheet" href="~/css/StyleSheet.css" />

<h4>BookViewModel</h4>
<hr />
<div class="row" style="block-size:450px, 450px,450px, 450px !important">
    <div class="col-md-8">
        <form asp-action="Book" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Row" class="control-label"></label>
                <input asp-for="Row" class="form-control" readonly/>
                <span asp-validation-for="Row" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Column" class="control-label"></label>
                <input asp-for="Column" class="form-control" readonly/>
                <span asp-validation-for="Column" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <input asp-for="FlightId" class="form-control" readonly />
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Passport" class="control-label"></label>
                <input asp-for="Passport" class="form-control" />
                <span asp-validation-for="Passport" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PricePaid" class="control-label"></label>
                <input asp-for="PricePaid" value="@Model.PricePaid.ToString("F2")" class="form-control" readonly />
                <span asp-validation-for="PricePaid" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Upload Image</label>
                <input name="imageFile" class="form-control" type="file" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="seat-map-container">
        <div class="seat-map-wrapper">
            <div class="seat-buttons-overlay">
                    @{
                        char[] alphabets = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();
                    };

                @for (int r = 0; r < Model.Maxrows; r++)
                {
                    <div class="seat-row">
                        @for (int c = 0; c < Model.Maxcols; c++)
                        {
                                string seatId = $"{r},{alphabets[c]}";
                            <button type="button" class="seat-button" data-seat="@seatId">@seatId</button>
                        }
                        <br />
                    </div>
                }
            </div>
            <img src="/Image/airplane.png" class="seat-map-image" />
        </div>
    </div>
    </div>
    <div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var seatButtons = document.querySelectorAll('.seat-button');

            seatButtons.forEach(function (button) {
                button.addEventListener('click', function () {
                    var seat = button.getAttribute('data-seat');
                    var seatParts = seat.split(',');

                    document.getElementById('Row').value = seatParts[0];
                    document.getElementById('Column').value = seatParts[1];
                });
            });
        });
    </script>
}
